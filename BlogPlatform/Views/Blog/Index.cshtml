@model BlogPlatform.Helper.PaginatedList<BlogPlatform.Models.BlogPost>


<!-- Create Button -->
<div>
    <a href="@Url.Action("Create", "Blog")"class="btn btn-primary">Create New Post</a>
</div>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<h1>Blog Posts</h1>

<table id="blogTable" class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           <tr>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@item.PostDate.ToShortDateString()</td>
                <td>
                   <a href="@Url.Action("Details", "Blog", new { id = item.Id })" class="btn btn-info">Details</a>
                   <a href="@Url.Action("Edit", "Blog", new { id = item.Id })" class="btn btn-warning">Edit</a>
                   <a href="@Url.Action("Delete", "Blog", new { id = item.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)">Previous</a>
        </li>
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)">Next</a>
        </li>
    </ul>
</nav>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />

<script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
<script>
    $(document).ready(function () {
        $('#blogTable').DataTable();
    });
</script>
