@model BlogPlatform.Models.BlogPost

@{
    ViewData["Title"] = "Edit Blog Post";
}

<h2>Edit Blog Post</h2>

<div>
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken() 

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Enter Title" })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @placeholder = "Enter Content", rows = "5" })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostDate, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.PostDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.PostDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Save" class="btn btn-primary" />
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
</div>
